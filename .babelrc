{
    "env": {
        // src/__tests__/
        // src/client/
        "client": {
            "presets": [
                "latest", // All you need to compile what's in ES2015 and above
                "flow", // Flow support
                "react", // Strip flow types and transform JSX
                "stage-2" // Experimental syntax extensions
            ],
            "sourceMaps": true // Compile with Source Maps
        },
        // src/server/
        "server": {
            "presets": [
                "flow", // Flow support
                "stage-2" // Experimental syntax extensions
            ],
            "sourceMaps": true // Compile with Source Maps
        }
    }
}