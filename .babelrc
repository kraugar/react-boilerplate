{
    "env": {
        "test": { // For tests
            "presets": [
                "latest", // All you need to compile what's in ES2015 and above
                "flow", // Flow support
                "react", // Strip flow types and transform JSX
                "stage-2" // Experimental syntax extensions
            ],
            "sourceMaps": true // Compile with Source Maps
        },
        "client:development": { // For client (development)
            "presets": [
                "latest", // All you need to compile what's in ES2015 and above
                "flow", // Flow support
                "react", // Strip flow types and transform JSX
                "stage-2" // Experimental syntax extensions
            ],
            "sourceMaps": true // Compile with Source Maps
        },
        "client:production": { // For client (production)
            "presets": [
                [
                    "latest", // All you need to compile what's in ES2015 and above
                    {
                        "es2015": { // ES2015 preset
                            "modules": false // Setting this to false will not transform modules
                        },
                        "es2016": { // ES2016 preset
                            "modules": false // Setting this to false will not transform modules
                        },
                        "es2017": { // ES2017 preset
                            "modules": false // Setting this to false will not transform modules
                        }
                    }
                ],
                "flow", // Flow support
                "react", // Strip flow types and transform JSX
                "stage-2" // Experimental syntax extensions
            ]
        },
        "server": { // For server
            "presets": [
                "flow", // Flow support
                "stage-2" // Experimental syntax extensions
            ]
        }
    }
}